# Data and logging
DATA_DIR=./data
LOG_LEVEL=info
CHECK_INTERVAL=60000        # 60 seconds (daemon check interval)
SESSION_TIMEOUT=30          # minutes

# Email notifications (optional - leave blank to disable)
SMTP_HOST=smtp.gmail.com    # SMTP server hostname
SMTP_PORT=587               # SMTP port (587 for TLS, 465 for SSL)
SMTP_SECURE=false           # true for SSL (port 465), false for TLS (port 587)
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=your-email@gmail.com
EMAIL_TO=notification-recipient@example.com
EMAIL_ENABLED=true          # Set to false to disable email notifications
